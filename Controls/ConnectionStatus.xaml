<UserControl x:Class="Deribit_Scalper_Trainer.ConnectionStatus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Deribit_Scalper_Trainer"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <Grid>
        <TextBlock  HorizontalAlignment="Left" Text="Deribit Connection Status:" TextWrapping="Wrap" VerticalAlignment="Center" Margin="10,0,0,0"/>
        <Ellipse x:Name="ConnectionStatusEllipse" HorizontalAlignment="Right" Height="15" Stroke="Black" VerticalAlignment="Center" Width="15" Margin="0,0,10,0" Fill="Red" />
    </Grid>
</UserControl>
